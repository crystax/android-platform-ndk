gen()
{
    local name=$1
    if [ -z "$name" ]; then
        echo "ERROR: empy name passed to 'gen' function" 1>&2
        exit 1
    fi
    echo "#ifndef ${name}"
    echo "#error ${name} not defined"
    echo "#endif"
}

gen fpclassify
gen isfinite
gen isinf
gen isnan
gen isnormal
gen signbit
gen isgreater
gen isgreaterequal
gen isless
gen islessequal
gen islessgreater
gen isunordered

gen M_E
gen M_LOG2E
gen M_LOG10E
gen M_LN2
gen M_LN10
gen M_PI
gen M_PI_2
gen M_PI_4
gen M_1_PI
gen M_2_PI
gen M_2_SQRTPI
gen M_SQRT2
gen M_SQRT1_2

gen MAXFLOAT
gen HUGE_VAL
gen HUGE_VALF
gen HUGE_VALL
gen INFINITY
gen NAN

gen FP_INFINITE
gen FP_NAN
gen FP_NORMAL
gen FP_SUBNORMAL
gen FP_ZERO
